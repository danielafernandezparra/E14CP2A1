<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>

      <table class="table">
        <td><%= link_to company.name , company_path(company.id) %></td>
        <td>Empleados: <%= company.employees.count %></td>
        <td><%= link_to 'Show', company, class:"btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_company_path(company), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </table>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path %>
